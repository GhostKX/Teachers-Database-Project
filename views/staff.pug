extends layout.pug 

block content
    .container 
        h1 All staff members

        if edited 
            p.edited Changes saved successfully! 
        if deleted 
            p.deleted Data deleted successfully! 
        if error
            p.error None of the fields should be empty! 

        each teacher in teachers
            div.teacher-wrapper
                a.teacher(href=`/staff/${ teacher.id }`)= teacher.firstname + " " + teacher.secondname
                a.delete(href=`/${teacher.id}/delete`) Delete

